<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
 



<AnchorPane id="AnchorPane" prefHeight="322" prefWidth="280" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calculator.gui.FXMLDocumentController">
    <children>

        <TextFlow styleClass="resultsArea" layoutY="10">
            <Text fx:id="results" styleClass="results" text="275-" />
        </TextFlow>
        <Button styleClass="cbutton" layoutX="10" layoutY="90" text="C" onAction="#handleClear" fx:id="button" />
        <Button layoutX="10" layoutY="135" text="7"  onAction="#handleGetNum"/>
        <Button layoutX="10" layoutY="180" text="4"  onAction="#handleGetNum"/>
        <Button layoutX="10" layoutY="225" text="1"  onAction="#handleGetNum"/>
        <Button layoutX="10" layoutY="270" text="0"  onAction="#handleGetNum"/>
        
        
        <Button layoutX="75" layoutY="90" text="Del" />
        <Button layoutX="75" layoutY="135" text="8"  onAction="#handleGetNum"/>
        <Button layoutX="75" layoutY="180" text="5"  onAction="#handleGetNum"/>
        <Button layoutX="75" layoutY="225" text="2"  onAction="#handleGetNum"/>
        <Button layoutX="75" layoutY="270" text="."  onAction="#handleGetNum"/>
        
        <Button layoutX="140" layoutY="90" text=" % " />
        <Button layoutX="140" layoutY="135" text="9" onAction="#handleGetNum"/>
        <Button layoutX="140" layoutY="180" text="6" onAction="#handleGetNum"/>
        <Button layoutX="140" layoutY="225" text="3" onAction="#handleGetNum"/>
        <Button layoutX="140" layoutY="270" text="ANS" />
        
        
        <Button layoutX="205" layoutY="90" text="/" onAction="#handleOperator"/>
        <Button layoutX="205" layoutY="135" text="*" onAction="#handleOperator"/>
        <Button layoutX="205" layoutY="180" text="-" onAction="#handleOperator"/>
        <Button layoutX="205" layoutY="225" text="+" onAction="#handleOperator"/>
        <Button styleClass="equalSymbol" layoutX="205" layoutY="270" text=" = "  onAction="#handleSolution" />

    </children>
</AnchorPane>
